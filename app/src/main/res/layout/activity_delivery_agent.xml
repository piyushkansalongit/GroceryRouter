<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeliveryAgentActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp">
        <TextView
            android:id="@+id/heading_agent_delivery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agent Capacity" />

        <EditText
            android:id="@+id/capacity_agent_delivery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/capacity"
            android:inputType="number" />

        <Button
            android:id="@+id/nextAgent_agent_delivery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/next_agent" />

        <Button
            android:id="@+id/done_agent_delivery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/done" />
    </LinearLayout>
</RelativeLayout>